<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weather"
            type="br.com.msf.weather.model.Weather" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/constraintInfos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MainActivity">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputLati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtEditLati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/latitude"
                    android:inputType="numberDecimal|numberSigned" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtInputLati"
                app:layout_constraintBottom_toTopOf="@+id/guideline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtEditLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/longitude"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal|numberSigned" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".25" />

            <TextView android:id="@+id/txtViewError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/error_happen"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                tools:text="An error happen, please try again"/>

            <ScrollView android:id="@+id/scrollInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout android:id="@+id/linearTz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/tz"/>

                        <TextView android:id="@+id/txtTimezone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.timezone}"
                            tools:text="@string/tz"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"

                        android:padding="@dimen/three_dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/summary"/>

                        <TextView android:id="@+id/txtSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.summary}"
                            tools:text="@string/summary"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearPrecipIntensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/precipIntensity"/>

                        <TextView android:id="@+id/txtPrecipIntensity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.precipIntensity.toString()}"
                            tools:text="0.0"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearPrecipProbability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/precipProbability"/>

                        <TextView android:id="@+id/txtPrecipProbability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.precipProbability.toString()}"
                            tools:text="0.0"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearApparentTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/apparentTemperature"/>

                        <TextView android:id="@+id/txtApparentTemperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.apparentTemperature.toString()}"
                            tools:text="0.0"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/humidity"/>

                        <TextView android:id="@+id/txtHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.humidity.toString()}"
                            tools:text="0.0"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearPressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/three_dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="@dimen/twenty_sp"
                            android:text="@string/pressure"/>

                        <TextView android:id="@+id/txtPressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_two_sp"
                            android:layout_weight="0.3"
                            android:text="@{weather.currently.pressure.toString()}"
                            tools:text="0.0"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

    </FrameLayout>
</layout>

